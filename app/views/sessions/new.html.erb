<h1>ログイン</h1>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with(url: login_path) do |form| %>
  <div>
    <%= form.label :id, "ID" %>
    <%= form.text_field :id %>
  </div>
  <br>
  <div>
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password %>
  </div>
  <br>
  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>